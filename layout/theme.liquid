<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'css/critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'index-build.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    <!-- âœ… Load GSAP via CDN -->
    <script src="{{ 'js/gsap.min.js' | asset_url }}" defer></script>
    <script src="{{ 'js/ScrollTrigger.min.js' | asset_url }}" defer></script>
  </head>

  <body className="template-{{ template.name }}">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
